<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/list_item_book_readed_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:padding="4dp" />

    <TextView
        android:id="@+id/list_item_book_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_book_readed_check_box"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_marginLeft="15dp"
        android:text="Заголовок книги" />

    <TextView
        android:id="@+id/list_item_book_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_book_readed_check_box"
        android:layout_below="@id/list_item_book_title_text_view"
        android:layout_marginLeft="20dp"
        android:text="Дата прочтения книги" />
</RelativeLayout>